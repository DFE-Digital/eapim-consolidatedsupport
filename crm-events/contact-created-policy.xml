<policies>
    <inbound>
        <set-variable name="payload" value="@(context.Request.Body.As&lt;string&gt;())" />
        <send-one-way-request mode="copy">
            <set-url>{{tlevel-contact-created-handler-url}}</set-url>
            <set-method>POST</set-method>
            <set-header name="Content-Type" exists-action="override">
                <value>application/Json</value>
            </set-header>
            <set-body>@($"{(string)context.Variables["payload"]}")</set-body>
        </send-one-way-request>    
        <set-backend-service base-url="{{createcontactlogicapp-baseUrl}}" />
        <set-method>POST</set-method>
        <rewrite-uri template="{{createcontactlogicapp-rewriteUrl}}" />
        <set-header name="Ocp-Apim-Subscription-Key" exists-action="delete" />
        <set-header name="Authorization" exists-action="delete" />
        <set-body>@($"{(string)context.Variables["payload"]}")</set-body>
        <base />
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>
